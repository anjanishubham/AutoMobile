<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="400dp"
    android:minWidth="400dp"
    android:orientation="vertical"
    tools:context=".ui.home.brand.dialogfragment.AddNewBrad">

    <!-- TODO: Update blank fragment layout -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        style="@style/ThemeOverlay.AppCompat"
        android:layout_height="?attr/actionBarSize"/>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="@dimen/top_margin_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_brand_name">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brand Name"
            android:id="@+id/tied_brand_name"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/top_margin_16dp"
        app:cardElevation="@dimen/top_margin_16dp"

        >
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/iv_brand_image"
        android:src="@drawable/empty_image"
        />
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|right"
            android:background="@null"
            android:src="@drawable/ic_add_circle_black_24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:padding="@dimen/top_margin_16dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:text="Add"
        android:id="@+id/bt_add_brand"/>



</LinearLayout>